<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_page"
    android:background="@drawable/bac1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Medi Cloud"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"

                android:layout_marginTop="20dp"/>

            <ViewFlipper
                android:id="@+id/v_flipper"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center">


            </ViewFlipper>

            <TextView
                android:id="@+id/textView91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your health is our property"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#AED6F1  "
                android:fontFamily="serif"
                android:gravity="center"
                android:text="My medical info"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#85C1E9 "
                android:fontFamily="serif"
                android:onClick="browser1"
                android:text="Channel a doctor"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#5DADE2  "
                android:fontFamily="serif"
                android:text="Health tips"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#3498DB "
                android:fontFamily="serif"
                android:text="BMI Calculator"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background=" #2E86C1  "
                android:fontFamily="serif"
                android:text="Hotline"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#2874A6 "
                android:fontFamily="serif"
                android:text="Feed Back"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#21618C "
                android:fontFamily="serif"
                android:text="Online Pharmacy"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>