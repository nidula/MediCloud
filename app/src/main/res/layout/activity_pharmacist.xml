<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pharmacist"
    android:background="@drawable/bac2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView142"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Welcome to Medi Cloud"
                android:textColor="#000"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView143"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter patients' Medical ID"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/editText65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Medical ID"
                android:textSize="20sp"
                android:textColorHint="#A6A6A6"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView149"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="NIC Number"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/textView151"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Address"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView147"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Prescription Details"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_maim"
                android:layout_marginBottom="15dp"
                android:enabled="false"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/button37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_maim"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/textView144"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online Orders"
                android:textColor="#FF0000"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView146"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Online Order ID"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/editText66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Order ID"
                android:textSize="20sp"
                android:textColorHint="#A6A6A6"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="NIC Number"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView152"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Address"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/textView148"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Order Details"
                android:layout_marginBottom="15dp"
                android:textSize="22sp"
                android:textColor="#000"
                android:textColorHint="#A6A6A6"/>

            <Button
                android:id="@+id/button34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_maim"
                android:layout_marginBottom="15dp"
                android:enabled="false"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/button38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_maim"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>